<div class="adicionarbtn">
    <button class="btn-success btn-lg" id="myBtn">Adicionar</button>

<!-- Elemento de fundo para cobrir toda a tela -->
    <div class="modal-background" id="modalBackground"></div>

    <!-- O modal existente -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="formaddprodutos">
              <form action="/add-produtos" method="POST">
                <label for="adfadfadf">Produto:</label><br>
                <input type="text" id="adfadfadf" name="produtopost"><br><br>

                <label for="adfadfadf">Valor:</label><br>
                <input type="number" id="adfadfadf" name="valorpost"><br><br>

                <label for="fafafadf">Quantidade:</label><br>
                <input type="number" id="fafafadf" name="quantidadepost"><br><br>

                <label for="dgdsg">Fornecedor:</label><br>
                <input type="text" id="dgdsg" name="fornecedorpost"><br><br>

                <label for="fadfad">Descricao:</label><br>
                <input type="text" id="fadfad" name="descricaopost"><br><br>
                <div class="adicionarbtnmodal">
                <button>Adicionar</button>
                </div>
              </form>
            </div>
            
        </div>
    </div>



<div class="tabelaprodutos">
    <div class="container">
        <h2>Tabela de Produtos</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                  <th>id</th>
                    <th>Produto</th>
                    <th>Valor</th>
                    <th>Quantidade</th>
                    <th>Fornecedor</th>
                    <th>Descricao</th>
                </tr>
            </thead>
            <tbody>
              {{#each produtos}}
              <tr>
              <td>{{id}}</td>
              <td>{{Produto}}</td>
              <td>{{Valor}}</td>
              <td>{{Quantidade}}</td>
              <td>{{Fornecedor}}</td>
              <td>{{Descricao}}   
                <form action="/apagar-produto" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <div class="lixeira">
            <button  type="submit" >
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
              </svg></button>
              </div></form></td>
           </tr> 
                <!-- Adicione mais linhas conforme necessÃ¡rio -->
                {{/each}}
            </tbody> 
           </div>
        </table>
    </div>
</div>



<script src="js/produtos.js"></script>
